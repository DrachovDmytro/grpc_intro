{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*"]
}
